'use client';

import { useState, useEffect } from 'react';
import {
    User,
    Phone,
    Mail,
    Calendar,
    MapPin,
    CreditCard,
    FileText,
    ChevronLeft,
    Save,
    Search,
    Package as PackageIcon,
    AlertCircle,
    CheckCircle2,
    Camera
} from 'lucide-react';
import Link from 'next/link';
import { useRouter } from 'next/navigation';

// Mock Data (In a real app, these would come from APIs)
const PACKAGES = [
    { id: '1', name: 'Gold Düğün Paketi', price: 15000 },
    { id: '2', name: 'Platin Dış Çekim', price: 8500 },
    { id: '3', name: 'Standart Video Klip', price: 5000 },
];

const CONTRACTS = [
    { id: '1', name: 'Dış Çekim Sözleşmesi (Standart)' },
    { id: '2', name: 'Video Çekim Sözleşmesi v2' },
    { id: '3', name: 'Düğün Hikayesi Sözleşmesi' },
];

export default function NewAppointmentPage() {
    const router = useRouter();

    // Form States
    const [customerType, setCustomerType] = useState<'new' | 'existing'>('new');
    const [pricingType, setPricingType] = useState<'package' | 'custom'>('package');
    const [isSubmitting, setIsSubmitting] = useState(false);

    // Credentials Modal State
    const [showCredentialsModal, setShowCredentialsModal] = useState(false);
    const [createdCredentials, setCreatedCredentials] = useState<any>(null);

    // Customer Search States
    const [searchTerm, setSearchTerm] = useState('');
    const [searchResults, setSearchResults] = useState<any[]>([]);
    const [isSearching, setIsSearching] = useState(false);
    const [selectedCustomer, setSelectedCustomer] = useState<any>(null);

    // Form Data
    const [formData, setFormData] = useState({
        // Customer
        firstName: '',
        lastName: '',
        phone1: '',
        phone2: '',
        email: '',
        tcId: '',

        // Shoot
        shootType: 'wedding', // wedding, engagement, saveTheDate, personal
        shootDate: '',
        shootTime: '',
        location: '',
        city: 'İstanbul',

        // Financial
        packageId: '',
        contractId: '',
        listPrice: 0,
        discount: 0,
        agreedPrice: 0, // Anlaşma Sağlanan Ücret
        deposit: 0,     // Kapora

        // Meta
        notes: ''
    });

    // Calculations
    const remainingPayment = (formData.agreedPrice || 0) - (formData.deposit || 0);

    // Customer Search Effect
    useEffect(() => {
        const searchCustomers = async () => {
            if (searchTerm.length < 2) {
                setSearchResults([]);
                return;
            }

            setIsSearching(true);
            try {
                const response = await fetch(`/api/customers?search=${encodeURIComponent(searchTerm)}`);
                if (response.ok) {
                    const data = await response.json();
                    setSearchResults(data);
                } else {
                    setSearchResults([]);
                }
            } catch (error) {
                console.error('Search error:', error);
                setSearchResults([]);
            } finally {
                setIsSearching(false);
            }
        };

        const timer = setTimeout(searchCustomers, 300); // Debounce
        return () => clearTimeout(timer);
    }, [searchTerm]);

    // Handlers
    const handlePackageChange = (e: React.ChangeEvent<HTMLSelectElement>) => {
        const pkgId = e.target.value;
        const pkg = PACKAGES.find(p => p.id === pkgId);

        if (pkg) {
            setFormData(prev => ({
                ...prev,
                packageId: pkgId,
                listPrice: pkg.price,
                agreedPrice: pkg.price // Default to list price, can be overridden
            }));
        } else {
            setFormData(prev => ({ ...prev, packageId: '' }));
        }
    };

    const handlePriceChange = (field: 'agreedPrice' | 'deposit' | 'discount', value: string) => {
        const numValue = parseFloat(value) || 0;
        setFormData(prev => ({
            ...prev,
            [field]: numValue
        }));
    };

    const handleCustomerSelect = (customer: any) => {
        setSelectedCustomer(customer);
        setFormData(prev => ({
            ...prev,
            firstName: `${customer.brideName || ''} & ${customer.groomName || ''}`.trim(),
            phone1: customer.phone || '',
            email: customer.email || '',
        }));
        setSearchTerm('');
        setSearchResults([]);
    };

    const handleSubmit = async () => {
        if (!formData.shootDate || !formData.shootTime) {
            alert('Lütfen tarih ve saat seçiniz.');
            return;
        }

        setIsSubmitting(true);

        try {
            let customerId = '';
            let newCustomerData = null; // To hold new customer data including credentials

            // 1. Handle Customer
            if (customerType === 'existing') {
                if (!selectedCustomer) {
                    alert('Lütfen bir müşteri seçiniz.');
                    setIsSubmitting(false);
                    return;
                }
                customerId = selectedCustomer._id;
            } else {
                // Parse names from single input (Simple split for demo)
                // "Ayşe & Ahmet" -> Bride: Ayşe, Groom: Ahmet
                const names = formData.firstName.split('&').map(s => s.trim());
                const brideName = names[0] || formData.firstName;
                const groomName = names[1] || '';

                const customerRes = await fetch('/api/customers', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({
                        brideName,
                        groomName,
                        phone: formData.phone1,
                        email: formData.email,
                        weddingDate: formData.shootDate, // Using shoot date as wedding date default
                        notes: `Created from appointment: ${formData.notes}`
                    })
                });

                if (!customerRes.ok) {
                    throw new Error('Müşteri oluşturulamadı');
                }

                newCustomerData = await customerRes.json();
                customerId = newCustomerData._id;

                // Store credentials to show modal later
                if (newCustomerData.credentials) {
                    setCreatedCredentials(newCustomerData.credentials);
                }
            }

            // 2. Create Appointment
            const shootRes = await fetch('/api/shoots', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify({
                    customerId,
                    date: new Date(`${formData.shootDate}T${formData.shootTime}`),
                    type: formData.shootType,
                    location: formData.location,
                    city: formData.city,

                    // Financials
                    packageId: formData.packageId,
                    contractId: formData.contractId,
                    agreedPrice: formData.agreedPrice,
                    deposit: formData.deposit,

                    notes: formData.notes
                })
            });

            if (!shootRes.ok) {
                throw new Error('Randevu oluşturulamadı');
            }

            // To be safe and simple:
            if (customerType === 'new') {
                // We rely on the state being set. But since we want to show it NOW, we might need to handle the redirection differently.
                // Actually, let's just show the modal. The modal "Close" button will push the router.
                setShowCredentialsModal(true);
            } else {
                alert('Randevu başarıyla oluşturuldu!');
                router.push('/admin/appointments');
            }

        } catch (error) {
            console.error('Submit error:', error);
            alert('Bir hata oluştu. Lütfen tekrar deneyiniz.');
        } finally {
            setIsSubmitting(false);
        }
    };

    return (
        <div className="p-6 lg:p-10 max-w-[1920px] mx-auto min-h-screen space-y-8">
            {/* Header */}
            <div className="bg-white p-6 rounded-2xl border border-gray-100 shadow-sm flex items-center justify-between">
                <div className="flex items-center gap-4">
                    <button
                        onClick={() => router.back()}
                        className="p-2 hover:bg-gray-50 rounded-xl transition-colors"
                    >
                        <ChevronLeft className="w-6 h-6 text-gray-400" />
                    </button>
                    <div>
                        <h1 className="text-2xl font-bold text-gray-900">
                            Yeni Randevu Oluştur
                        </h1>
                        <p className="text-gray-500 text-sm mt-1">
                            Müşteri bilgileri ve çekim detaylarını giriniz
                        </p>
                    </div>
                </div>

                <div className="flex items-center gap-3">
                    <button className="px-6 py-2.5 bg-white border border-gray-200 text-gray-700 font-medium rounded-xl hover:bg-gray-50 transition-colors">
                        Taslak Olarak Kaydet
                    </button>
                    <button
                        onClick={handleSubmit}
                        disabled={isSubmitting}
                        className="px-6 py-2.5 bg-[#6366F1] hover:bg-[#5558DD] text-white font-medium rounded-xl shadow-lg shadow-indigo-500/20 flex items-center gap-2 transition-all disabled:opacity-50 disabled:cursor-not-allowed"
                    >
                        {isSubmitting ? (
                            <div className="w-5 h-5 border-2 border-white/30 border-t-white rounded-full animate-spin" />
                        ) : (
                            <Save className="w-5 h-5" />
                        )}
                        {isSubmitting ? 'Kaydediliyor...' : 'Randevuyu Oluştur'}
                    </button>
                </div>
            </div>
            <div className="px-8 py-6 border-b border-gray-50 bg-gray-50/50 flex items-center justify-between">
                <h3 className="text-lg font-bold text-gray-900 flex items-center gap-2">
                    <User className="w-5 h-5 text-indigo-500" />
                    Müşteri Bilgileri
                </h3>
                <div className="flex bg-gray-200/50 p-1 rounded-lg">
                    <button
                        onClick={() => setCustomerType('new')}
                        className={`px-4 py-1.5 text-xs font-bold rounded-md transition-all ${customerType === 'new' ? 'bg-white shadow-sm text-indigo-600' : 'text-gray-500 hover:text-gray-700'}`}
                    >
                        Yeni Müşteri
                    </button>
                    <button
                        onClick={() => setCustomerType('existing')}
                        className={`px-4 py-1.5 text-xs font-bold rounded-md transition-all ${customerType === 'existing' ? 'bg-white shadow-sm text-indigo-600' : 'text-gray-500 hover:text-gray-700'}`}
                    >
                        Mevcut Müşteri
                    </button>
                </div>
            </div>

            <div className="p-8 grid grid-cols-1 md:grid-cols-2 gap-6">
                {customerType === 'existing' ? (
                    <div className="col-span-2 space-y-4">
                        <div className="relative">
                            <label className="text-xs font-bold text-gray-500 uppercase tracking-wider mb-2 block">Müşteri Bul</label>
                            <div className="relative">
                                <Search className="absolute left-4 top-1/2 -translate-y-1/2 w-5 h-5 text-gray-400" />
                                <input
                                    value={searchTerm}
                                    onChange={(e) => setSearchTerm(e.target.value)}
                                    className="w-full pl-12 pr-4 py-3 bg-gray-50 border border-gray-200 rounded-xl focus:bg-white focus:border-indigo-500 focus:ring-4 focus:ring-indigo-500/10 transition-all outline-none"
                                    placeholder="Telefon no veya isim ile ara..."
                                />
                                {isSearching && (
                                    <div className="absolute right-4 top-1/2 -translate-y-1/2">
                                        <div className="w-5 h-5 border-2 border-indigo-500 border-t-transparent rounded-full animate-spin"></div>
                                    </div>
                                )}
                            </div>

                            {/* Search Results Dropdown */}
                            {searchResults.length > 0 && (
                                <div className="absolute z-10 w-full mt-2 bg-white border border-gray-200 rounded-xl shadow-lg max-h-64 overflow-y-auto">
                                    {searchResults.map((customer) => (
                                        <button
                                            key={customer._id}
                                            onClick={() => handleCustomerSelect(customer)}
                                            className="w-full px-4 py-3 text-left hover:bg-indigo-50 transition-colors border-b border-gray-100 last:border-b-0"
                                        >
                                            <div className="font-medium text-gray-900">
                                                {customer.brideName} & {customer.groomName}
                                            </div>
                                            <div className="text-sm text-gray-500 mt-1 flex items-center gap-3">
                                                <span className="flex items-center gap-1">
                                                    <Phone className="w-3 h-3" />
                                                    {customer.phone}
                                                </span>
                                                {customer.email && (
                                                    <span className="flex items-center gap-1">
                                                        <Mail className="w-3 h-3" />
                                                        {customer.email}
                                                    </span>
                                                )}
                                            </div>
                                        </button>
                                    ))}
                                </div>
                            )}

                            {/* No Results */}
                            {searchTerm.length >= 2 && !isSearching && searchResults.length === 0 && (
                                <div className="absolute z-10 w-full mt-2 bg-white border border-gray-200 rounded-xl shadow-lg p-4">
                                    <p className="text-sm text-gray-500 text-center">Müşteri bulunamadı</p>
                                </div>
                            )}
                        </div>

                        {/* Selected Customer Display */}
                        {selectedCustomer && (
                            <div className="bg-indigo-50 border border-indigo-200 rounded-xl p-4">
                                <div className="flex items-start justify-between">
                                    <div>
                                        <p className="text-sm font-bold text-indigo-900">Seçili Müşteri</p>
                                        <p className="text-lg font-bold text-indigo-700 mt-1">
                                            {selectedCustomer.brideName} & {selectedCustomer.groomName}
                                        </p>
                                        <div className="flex items-center gap-3 mt-2 text-sm text-indigo-600">
                                            <span className="flex items-center gap-1">
                                                <Phone className="w-4 h-4" />
                                                {selectedCustomer.phone}
                                            </span>
                                            {selectedCustomer.email && (
                                                <span className="flex items-center gap-1">
                                                    <Mail className="w-4 h-4" />
                                                    {selectedCustomer.email}
                                                </span>
                                            )}
                                        </div>
                                    </div>
                                    <button
                                        onClick={() => {
                                            setSelectedCustomer(null);
                                            setFormData(prev => ({
                                                ...prev,
                                                firstName: '',
                                                phone1: '',
                                                email: '',
                                            }));
                                        }}
                                        className="text-indigo-700 hover:text-indigo-900"
                                    >
                                        <AlertCircle className="w-5 h-5" />
                                    </button>
                                </div>
                            </div>
                        )}
                    </div>
                ) : (
                    <>
                        <div className="space-y-2">
                            <label className="text-xs font-bold text-gray-500 uppercase tracking-wider">Ad Soyad / Gelin-Damat</label>
                            <input
                                type="text"
                                value={formData.firstName}
                                onChange={(e) => setFormData({ ...formData, firstName: e.target.value })}
                                className="w-full px-4 py-3 bg-white border border-gray-200 rounded-xl focus:border-indigo-500 focus:ring-4 focus:ring-indigo-500/10 transition-all outline-none"
                                placeholder="Örn: Ayşe & Ahmet Yılmaz"
                            />
                        </div>
                        <div className="space-y-2">
                            <label className="text-xs font-bold text-gray-500 uppercase tracking-wider">TC Kimlik / Pasaport</label>
                            <input
                                type="text"
                                value={formData.tcId}
                                onChange={(e) => setFormData({ ...formData, tcId: e.target.value })}
                                className="w-full px-4 py-3 bg-white border border-gray-200 rounded-xl focus:border-indigo-500 focus:ring-4 focus:ring-indigo-500/10 transition-all outline-none"
                                placeholder="Kimlik Numarası"
                            />
                        </div>
                        <div className="space-y-2">
                            <label className="text-xs font-bold text-gray-500 uppercase tracking-wider">Telefon 1 (Kendisi)</label>
                            <div className="relative">
                                <Phone className="absolute left-4 top-1/2 -translate-y-1/2 w-4 h-4 text-gray-400" />
                                <input
                                    type="tel"
                                    value={formData.phone1}
                                    onChange={(e) => setFormData({ ...formData, phone1: e.target.value })}
                                    className="w-full pl-10 pr-4 py-3 bg-white border border-gray-200 rounded-xl focus:border-indigo-500 focus:ring-4 focus:ring-indigo-500/10 transition-all outline-none"
                                    placeholder="05XX XXX XX XX"
                                />
                            </div>
                        </div>
                        <div className="space-y-2">
                            <label className="text-xs font-bold text-gray-500 uppercase tracking-wider">Telefon 2 (Yakını)</label>
                            <div className="relative">
                                <Phone className="absolute left-4 top-1/2 -translate-y-1/2 w-4 h-4 text-gray-400" />
                                <input
                                    type="tel"
                                    value={formData.phone2}
                                    onChange={(e) => setFormData({ ...formData, phone2: e.target.value })}
                                    className="w-full pl-10 pr-4 py-3 bg-white border border-gray-200 rounded-xl focus:border-indigo-500 focus:ring-4 focus:ring-indigo-500/10 transition-all outline-none"
                                    placeholder="05XX XXX XX XX"
                                />
                            </div>
                        </div>
                        <div className="col-span-2 space-y-2">
                            <label className="text-xs font-bold text-gray-500 uppercase tracking-wider">E-Posta Adresi</label>
                            <div className="relative">
                                <Mail className="absolute left-4 top-1/2 -translate-y-1/2 w-4 h-4 text-gray-400" />
                                <input
                                    type="email"
                                    value={formData.email}
                                    onChange={(e) => setFormData({ ...formData, email: e.target.value })}
                                    className="w-full pl-10 pr-4 py-3 bg-white border border-gray-200 rounded-xl focus:border-indigo-500 focus:ring-4 focus:ring-indigo-500/10 transition-all outline-none"
                                    placeholder="ornek@email.com"
                                />
                            </div>
                        </div>
                    </>
                )}
            </div>

            <div className="grid grid-cols-1 xl:grid-cols-3 gap-8">
                {/* Main Form Column */}
                <div className="xl:col-span-2 space-y-8">

                    {/* 2. Çekim Detayları */}
                    <div className="bg-white rounded-[24px] border border-gray-100 shadow-sm overflow-hidden">
                        <div className="px-8 py-6 border-b border-gray-50 bg-gray-50/50">
                            <h3 className="text-lg font-bold text-gray-900 flex items-center gap-2">
                                <Camera className="w-5 h-5 text-indigo-500" />
                                Çekim Detayları
                            </h3>
                        </div>
                        <div className="p-8 space-y-6">

                            {/* Shoot Type Grid */}
                            <div className="space-y-2">
                                <label className="text-xs font-bold text-gray-500 uppercase tracking-wider">Çekim Türü</label>
                                <div className="grid grid-cols-2 md:grid-cols-4 gap-3">
                                    {[
                                        { id: 'wedding', label: 'Düğün' },
                                        { id: 'engagement', label: 'Nişan' },
                                        { id: 'saveTheDate', label: 'Save The Date' },
                                        { id: 'personal', label: 'Kişisel/Model' }
                                    ].map(type => (
                                        <button
                                            key={type.id}
                                            onClick={() => setFormData({ ...formData, shootType: type.id })}
                                            className={`py-3 px-4 rounded-xl text-sm font-medium border transition-all ${formData.shootType === type.id
                                                ? 'bg-indigo-50 border-indigo-500 text-indigo-700 shadow-sm ring-1 ring-indigo-500'
                                                : 'bg-white border-gray-200 text-gray-600 hover:border-indigo-200 hover:bg-gray-50'
                                                }`}
                                        >
                                            {type.label}
                                        </button>
                                    ))}
                                </div>
                            </div>

                            <div className="grid grid-cols-1 md:grid-cols-2 gap-6">
                                <div className="space-y-2">
                                    <label className="text-xs font-bold text-gray-500 uppercase tracking-wider">Çekim Lokasyonu</label>
                                    <div className="relative">
                                        <MapPin className="absolute left-4 top-1/2 -translate-y-1/2 w-4 h-4 text-gray-400" />
                                        <input
                                            type="text"
                                            value={formData.location}
                                            onChange={(e) => setFormData({ ...formData, location: e.target.value })}
                                            className="w-full pl-10 pr-4 py-3 bg-white border border-gray-200 rounded-xl focus:border-indigo-500 focus:ring-4 focus:ring-indigo-500/10 transition-all outline-none"
                                            placeholder="Örn: Atatürk Arboretumu"
                                        />
                                    </div>
                                </div>
                                <div className="space-y-2">
                                    <label className="text-xs font-bold text-gray-500 uppercase tracking-wider">Şehir</label>
                                    <select
                                        value={formData.city}
                                        onChange={(e) => setFormData({ ...formData, city: e.target.value })}
                                        className="w-full px-4 py-3 bg-white border border-gray-200 rounded-xl focus:border-indigo-500 focus:ring-4 focus:ring-indigo-500/10 transition-all outline-none"
                                    >
                                        <option value="İstanbul">İstanbul</option>
                                        <option value="Ankara">Ankara</option>
                                        <option value="İzmir">İzmir</option>
                                        <option value="Antalya">Antalya</option>
                                    </select>
                                </div>
                                <div className="space-y-2">
                                    <label className="text-xs font-bold text-gray-500 uppercase tracking-wider">Tarih</label>
                                    <div className="relative">
                                        <Calendar className="absolute left-4 top-1/2 -translate-y-1/2 w-4 h-4 text-gray-400" />
                                        <input
                                            type="date"
                                            value={formData.shootDate}
                                            onChange={(e) => setFormData({ ...formData, shootDate: e.target.value })}
                                            className="w-full pl-10 pr-4 py-3 bg-white border border-gray-200 rounded-xl focus:border-indigo-500 focus:ring-4 focus:ring-indigo-500/10 transition-all outline-none"
                                        />
                                    </div>
                                </div>
                                <div className="space-y-2">
                                    <label className="text-xs font-bold text-gray-500 uppercase tracking-wider">Saat</label>
                                    <input
                                        type="time"
                                        value={formData.shootTime}
                                        onChange={(e) => setFormData({ ...formData, shootTime: e.target.value })}
                                        className="w-full px-4 py-3 bg-white border border-gray-200 rounded-xl focus:border-indigo-500 focus:ring-4 focus:ring-indigo-500/10 transition-all outline-none"
                                    />
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                {/* Sidebar Column: Financials & Summary */}
                <div className="space-y-6">

                    {/* Financial Card */}
                    <div className="bg-white rounded-[24px] border border-gray-100 shadow-xl shadow-indigo-500/5">
                        <div className="px-6 py-5 border-b border-gray-50 bg-gray-50/50">
                            <h3 className="text-lg font-bold text-gray-900 flex items-center gap-2">
                                <CreditCard className="w-5 h-5 text-indigo-500" />
                                Ödeme & Anlaşma
                            </h3>
                        </div>
                        <div className="p-6 space-y-6">

                            {/* Pricing Type Toggle */}
                            <div className="bg-gray-100 p-1 rounded-xl flex">
                                <button
                                    onClick={() => {
                                        setPricingType('package');
                                        setFormData(prev => ({ ...prev, packageId: '' })); // Reset selection
                                    }}
                                    className={`flex-1 py-2 text-xs font-bold rounded-lg transition-all ${pricingType === 'package' ? 'bg-white text-indigo-600 shadow-sm' : 'text-gray-500 hover:text-gray-700'
                                        }`}
                                >
                                    Paket Seçimi
                                </button>
                                <button
                                    onClick={() => {
                                        setPricingType('custom');
                                        setFormData(prev => ({ ...prev, packageId: '', agreedPrice: 0 })); // Reset
                                    }}
                                    className={`flex-1 py-2 text-xs font-bold rounded-lg transition-all ${pricingType === 'custom' ? 'bg-white text-indigo-600 shadow-sm' : 'text-gray-500 hover:text-gray-700'
                                        }`}
                                >
                                    Özel Anlaşma
                                </button>
                            </div>

                            {/* Content based on Pricing Type */}
                            {pricingType === 'package' ? (
                                <div className="space-y-2 animate-in fadeIn slide-in-from-top-2 duration-300">
                                    <label className="text-xs font-bold text-gray-500 uppercase tracking-wider">Paket Seçiniz</label>
                                    <div className="relative">
                                        <PackageIcon className="absolute left-4 top-1/2 -translate-y-1/2 w-4 h-4 text-gray-400" />
                                        <select
                                            value={formData.packageId}
                                            onChange={handlePackageChange}
                                            className="w-full pl-10 pr-4 py-3 bg-white border border-gray-200 rounded-xl focus:border-indigo-500 outline-none appearance-none"
                                        >
                                            <option value="">Seçim Yapınız</option>
                                            {PACKAGES.map(pkg => (
                                                <option key={pkg.id} value={pkg.id}>
                                                    {pkg.name} - {pkg.price.toLocaleString()} TL
                                                </option>
                                            ))}
                                        </select>
                                    </div>
                                    {formData.packageId && (
                                        <p className="text-xs text-green-600 flex items-center gap-1">
                                            <CheckCircle2 className="w-3 h-3" /> Paket fiyatı otomatik uygulandı
                                        </p>
                                    )}
                                </div>
                            ) : (
                                <div className="p-4 bg-amber-50 border border-amber-100 rounded-xl animate-in fadeIn slide-in-from-top-2 duration-300">
                                    <div className="flex items-start gap-3">
                                        <AlertCircle className="w-5 h-5 text-amber-500 flex-shrink-0 mt-0.5" />
                                        <div>
                                            <p className="text-sm font-bold text-amber-800">Paket Harici Anlaşma</p>
                                            <p className="text-xs text-amber-600 mt-1">
                                                Standart paketler dışında, müşteriyle özel bir fiyat üzerinde anlaşıldığında bu seçeneği kullanın.
                                            </p>
                                        </div>
                                    </div>
                                </div>
                            )}

                            <hr className="border-gray-100" />

                            {/* Financial Inputs */}
                            <div className="space-y-4">
                                <div className="space-y-1">
                                    <label className="text-xs font-bold text-gray-500 uppercase tracking-wider">Anlaşma Sağlanan Ücret</label>
                                    <div className="relative">
                                        <input
                                            type="number"
                                            value={formData.agreedPrice || ''}
                                            onChange={(e) => handlePriceChange('agreedPrice', e.target.value)}
                                            className={`w-full px-4 py-3 border rounded-xl font-bold text-lg outline-none transition-all ${pricingType === 'package'
                                                ? 'bg-gray-50 border-gray-200 text-gray-500' // Read-only look if package (though editable if desired)
                                                : 'bg-white border-indigo-200 text-indigo-600 focus:ring-4 focus:ring-indigo-500/10'
                                                }`}
                                        />
                                        <span className="absolute right-4 top-1/2 -translate-y-1/2 text-sm font-bold text-gray-400">TL</span>
                                    </div>
                                </div>

                                <div className="grid grid-cols-2 gap-4">
                                    <div className="space-y-1">
                                        <label className="text-xs font-bold text-gray-500 uppercase tracking-wider">Alınan Kapora</label>
                                        <div className="relative">
                                            <input
                                                type="number"
                                                value={formData.deposit || ''}
                                                onChange={(e) => handlePriceChange('deposit', e.target.value)}
                                                className="w-full px-4 py-3 bg-white border border-gray-200 rounded-xl font-medium outline-none focus:border-indigo-500"
                                                placeholder="0"
                                            />
                                        </div>
                                    </div>
                                    <div className="space-y-1">
                                        <label className="text-xs font-bold text-gray-500 uppercase tracking-wider">Kalan Tutar</label>
                                        <div className="relative">
                                            <div className="w-full px-4 py-3 bg-gray-50 border border-gray-200 rounded-xl font-bold text-gray-700">
                                                {remainingPayment.toLocaleString()} <span className="text-xs text-gray-400 font-medium">TL</span>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    {/* Contract Card */}
                    < div className="bg-white rounded-[24px] border border-gray-100 shadow-sm" >
                        <div className="px-6 py-5 border-b border-gray-50 bg-gray-50/50">
                            <h3 className="text-lg font-bold text-gray-900 flex items-center gap-2">
                                <FileText className="w-5 h-5 text-indigo-500" />
                                Sözleşme
                            </h3>
                        </div>
                        <div className="p-6 space-y-4">
                            <div className="space-y-2">
                                <label className="text-xs font-bold text-gray-500 uppercase tracking-wider">Kullanılacak Sözleşme</label>
                                <select
                                    value={formData.contractId}
                                    onChange={(e) => setFormData({ ...formData, contractId: e.target.value })}
                                    className="w-full px-4 py-3 bg-white border border-gray-200 rounded-xl focus:border-indigo-500 outline-none text-sm"
                                >
                                    <option value="">Sözleşme Seçiniz</option>
                                    {CONTRACTS.map(c => (
                                        <option key={c.id} value={c.id}>{c.name}</option>
                                    ))}
                                </select>
                            </div>
                            <div className="flex items-center gap-3 p-3 bg-gray-50 rounded-xl border border-gray-100">
                                <input type="checkbox" className="w-4 h-4 text-indigo-600 rounded border-gray-300 focus:ring-indigo-500" />
                                <span className="text-xs text-gray-600 font-medium">Müşteri sözleşmeyi okudu ve onayladı</span>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
                                    <CheckCircle2 className="w-8 h-8" />
                                </div>
                                <h2 className="text-xl font-bold text-gray-900">Müşteri Oluşturuldu</h2>
                                <p className="text-gray-500 mt-2">
                                    Müşteri için oluşturulan giriş bilgilerini lütfen not alınız.
                                </p>
                            </div >

                            <div className="space-y-4 bg-gray-50 p-4 rounded-xl border border-gray-100 mb-6">
                                <div>
                                    <label className="text-xs font-semibold text-gray-400 uppercase tracking-wider">Kullanıcı Adı</label>
                                    <div className="text-lg font-mono font-medium text-gray-900 select-all">
                                        {createdCredentials.displayUsername}
                                    </div>
                                </div>
                                <div>
                                    <label className="text-xs font-semibold text-gray-400 uppercase tracking-wider">Şifre</label>
                                    <div className="text-lg font-mono font-bold text-indigo-600 select-all">
                                        {createdCredentials.password}
                                    </div>
                                </div>
                                <div className="pt-2 border-t border-gray-200">
                                    <label className="text-xs font-semibold text-gray-400 uppercase tracking-wider">Panel Giriş</label>
                                    <div className="text-sm text-gray-600">
                                        {createdCredentials.username}
                                    </div>
                                </div>
                            </div>

                            <button
                                onClick={() => {
                                    setShowCredentialsModal(false);
                                    router.push('/admin/appointments');
                                }}
                                className="w-full py-3 bg-gray-900 text-white rounded-xl font-medium hover:bg-gray-800 transition-colors"
                            >
                                Tamam, Devam Et
                            </button>
                        </div >
                    </div >
                )
}
        </div >
    );
}


